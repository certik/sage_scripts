#!/usr/bin/env python

import os, sys, socket

print open(os.environ['SAGE_ROOT'] + '/local/bin/sage-banner').read()

print "Please wait while the Distributed Sage server starts..."

from sage.dsage.all import dsage

print "..."

if len(sys.argv) > 1:
    kwargs = {}
    for arg in sys.argv[1:]:
        key, value = arg.split('=')
        kwargs[key] = value
    dsage.server(**kwargs)
else:
    dsage.server()